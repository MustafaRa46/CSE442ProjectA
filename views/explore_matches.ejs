<%- include('navbar_login'); -%>
<%- include('headers'); -%>
<%- include('container'); -%>
<% if (message == "matchsuccess") { %>
  <div class="alert alert-success" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    You have succesfully matched with <%= acceptedname %>! Visit <a href="explore"> Matches</a> to see your list of matches.
  </div>
  <% } %>
<div class="page-header">
    <h1>Explore<br><br></b><small>Your Potential Matches</small></h1>
</div>

<% for(var i=0; i<data.length; i++) {%>
<ul class="list-group">
    <li class="list-group-item">
         Owner Name: <%= data[i].potential_match_first_name %>, <%= data[i].potential_match_last_name%> 
            <div class="col text-right">
              <form id="button_accept" action="/explore_matches" method="post">
                <input type="hidden" name="firstName" value=<%= data[i].potential_match_first_name%>>
                <input type="hidden" name="lastName" value=<%= data[i].potential_match_last_name%>>
                <input type="hidden" name="accountidsearched" value=<%= data[i].potential_match_account_id%>>
                <button class= "btn btn-success" name="Accept_button"  type="submit">Accept</button>
              </form>

              <form id="view_profile_button" action="/search" method="post">
                <input type="hidden" name="accountidsearched" value=<%= data[i].potential_match_account_id%>>
                <button class="btn btn-success text-right" name="profile_button" type="submit">View Profile</button>
              </form>
              
            </div> 
        <br/>
    </li>
</ul>
<% } %>

<%- include('endcontainer'); -%>
<%- include('footers'); -%>
